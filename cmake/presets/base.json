{
  "version": 7,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/output/build/${presetName}",
      "installDir": "${sourceDir}/output/install/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "AMQCPP_WITH_CCACHE": true,
        "CMAKE_COLOR_DIAGNOSTICS": "ON",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "VCPKG_INSTALLED_DIR": "${sourceDir}/.cache/vcpkg/installed",
        "VCPKG_INSTALL_OPTIONS": "--x-buildtrees-root=${sourceDir}/.cache/vcpkg/buildtrees"
      },
      "warnings": {
        "deprecated": true,
        "dev": false,
        "uninitialized": false
      },
      "environment": {
        "VCPKG_DOWNLOADS": "${sourceDir}/.cache/vcpkg/downloads"
      }
    },
    {
      "name": "test",
      "hidden": true,
      "cacheVariables": {
        "AMQCPP_BUILD_TESTS": true,
        "AMQCPP_USE_SSL": true,
        "VCPKG_MANIFEST_FEATURES": "tests;ssl"
      }
    },
    {
      "name": "test-no-ssl",
      "hidden": true,
      "cacheVariables": {
        "AMQCPP_BUILD_TESTS": true,
        "VCPKG_MANIFEST_FEATURES": "tests"
      }
    },
    {
      "name": "x86",
      "hidden": true,
      "architecture": {
        "strategy": "external",
        "value": "x86"
      }
    },
    {
      "name": "x64",
      "hidden": true,
      "architecture": {
        "strategy": "external",
        "value": "x64"
      }
    },
    {
      "name": "arm64",
      "hidden": true,
      "architecture": {
        "strategy": "external",
        "value": "arm64"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "static",
      "hidden": true,
      "cacheVariables": {
        "AMQCPP_SHARED_LIB": false
      }
    },
    {
      "name": "no-ssl",
      "hidden": true,
      "cacheVariables": {
        "AMQCPP_USE_SSL": false
      }
    },
    {
      "name": "asan",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
        "CMAKE_C_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address"
      }
    }
  ]
}