{
  "name": "neoactivemq-cpp",
  "version-string": "0.0.0",
  "description": "C++ client library for Apache ActiveMQ messaging broker with support for OpenWire protocol",
  "dependencies": [
    "asio",
    "zlib"
  ],
  "features": {
    "ssl": {
      "description": "Enable SSL/TLS support via OpenSSL",
      "dependencies": [
        "openssl"
      ]
    },
    "tests": {
      "description": "Build tests (unit, benchmark, integration)",
      "dependencies": [
        "cppunit"
      ]
    }
  }
}
